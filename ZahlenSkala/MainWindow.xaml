<Window x:Class="ZahlenSkala.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZahlenSkala"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel>
            <CheckBox Content="auto step" x:Name="checkStep" />
            <TextBox x:Name="textNum" />
            <Button x:Name="buttonSet" Content="Set" Click="buttonSet_Click" />
            <TextBox x:Name="textNumSet" IsEnabled="False" />
        </StackPanel>
        <local:SentenceGrid x:Name="sentenceGrid" />
    </DockPanel>
</Window>
